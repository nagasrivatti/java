import java.io.*;
import java.util.*;
class RectangleArea
{
    double l,b;
    double area()
    {
        return(0.5*l*b);
    }
}
class Main
    {
        public static void main(String args[])
        {
        RectangleArea ra=new RectangleArea();
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter l,b values of the Rectangle");
        ra.l=sc.nextInt();
        ra.b=sc.nextInt();
        System.out.println("Area of the Rectangle is"+ra.area());
        }
    }

    
